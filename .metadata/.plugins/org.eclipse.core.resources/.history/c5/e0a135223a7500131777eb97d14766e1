		int[][] arrays = game.getMap();
		String tmp = "";
		for (int i = 0; i < arrays.length; i++) {
			for (int j = 0; j < arrays[i].length; j++) {
				
			}
		}
		
		map.put("mineCount", Arrays.toString() + "");
		return map;
	}
}
